@model TinklinisPlius.Models.WagerCreationViewModel

<h2>Create a New Wager</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="CreateWagerWindow" method="post">
    <div class="form-group">
        <label for="MatchId">Select Upcoming Match</label>
        <select asp-for="SelectedMatchId" class="form-control" asp-items="Model.MatchOptions">
            <option value="">-- Select a match --</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Create Wager</button>
</form>

<div class="mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Return Home</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
